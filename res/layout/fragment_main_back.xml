<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imgDataPatternDashboard"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/imagesample" />

            <ImageButton
                android:id="@+id/btnProfil"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="74dp"
                android:src="@drawable/robocog" />

            <LinearLayout
                android:id="@+id/dashboardLayout1"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal"
                android:layout_below="@id/imgDataPatternDashboard" >
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView 
                        android:id="@+id/textDash1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dash Board 1"
                        android:layout_gravity="center_vertical|center_horizontal"
                        />
                    
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView 
                        android:id="@+id/textDash2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dash Board 2"
                        android:layout_gravity="center_vertical|center_horizontal"
                        />
                </LinearLayout>
               
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dashboardLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/dashboardLayout1" >
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="150px"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView 
                        android:id="@+id/textDash3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dash Board 3"
                        android:layout_gravity="center_vertical|center_horizontal"
                        />
                    
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView 
                        android:id="@+id/textDash4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dash Board 4"
                        android:layout_gravity="center_vertical|center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="vertical"
                android:layout_below="@id/dashboardLayout2">
                
                <TextView 
                    android:id="@+id/textDash5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DashBoard 5"
                    android:layout_gravity="center_vertical|center_horizontal"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>