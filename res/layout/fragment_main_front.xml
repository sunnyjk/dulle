<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgDataPattern"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/luna" >
    </ImageView>

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgDataPattern"
        android:text="전체 패턴 데이터" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView1"
        android:layout_marginTop="20px"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/front_detail1"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="예시) 스탬프 0개" />

        <TextView
            android:id="@+id/front_detail2"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="예시) 걸은 거리 0km" />

        <TextView
            android:id="@+id/front_detail3"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="예시) 걸은 시간 0분" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnOnOff"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:src="@drawable/arrow" />

</RelativeLayout>